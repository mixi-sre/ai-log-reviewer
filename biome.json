{
    "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        },
        "ignore": ["cdk.out/**/*", "**/*.js", "**/*.d.ts", "**/*.json"]
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 120,
        "ignore": ["cdk.out/**/*", "**/*.js", "**/*.d.ts", "**/*.json"]
    }
}
